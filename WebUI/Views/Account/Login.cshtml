<body class="text-center">

    <main class="form-signin w-100 m-auto">
        @using (Html.BeginForm("Login", "Account", new { }, FormMethod.Post, new { Class = "form-horizontal" }))
        {
            @Html.AntiForgeryToken()
            <img class="mb-4" src="~/Resources/Layout/Images/logo64.png" />
            <div style="font-size: 20px; font-weight: 900;" class="mb-3">@(ConfigurationManager.AppSettings["Brand"] ?? "DEPLOILKA")</div>
            <h3 class="mb-3 fw-normal">Please sign in</h3>

            <div class="form-floating">
                @Html.TextBoxFor(m => m.Email, new { Class = "form-control", placeholder = "Email" })
                <label for="Email">Email address</label>
            </div>

            <div class="form-floating">
                @Html.PasswordFor(m => m.Password, new { Class = "form-control", placeholder = "Пароль" })
                <label for="Password">Password</label>
            </div>

            <button class="w-100 btn btn-lg btn-primary" type="submit">Sign in</button>

        }
    </main>



</body>
